<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profileIv"
            android:layout_marginTop="20dp"
            android:background="#A8A7A7"
            android:src="@drawable/akun"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelNama"
            android:textStyle="bold"
            android:layout_below="@+id/profileIv"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Nama"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaTv"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profileIv"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="15sp"
            android:text="---------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEmail"
            android:layout_below="@+id/labelNama"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="Email"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailTv"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/namaTv"
            android:textColor="#808080"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:text="---------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelPhone"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@+id/labelEmail"
            android:layout_marginTop="10dp"
            android:text="Nomor Telepon"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneTv"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/emailTv"
            android:textColor="#808080"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:text="---------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelStatusAkun"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/labelPhone"
            android:layout_marginTop="10dp"
            android:text="Status Akun"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeAkun"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/phoneTv"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="15sp"
            android:text="--"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelBank"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/labelStatusAkun"
            android:layout_marginTop="10dp"
            android:text="Bank"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bank"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/typeAkun"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="15sp"
            android:text="--"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelRekening"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/labelBank"
            android:layout_marginTop="10dp"
            android:text="Nomor Rekening"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rekening"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bank"
            android:layout_alignParentEnd="true"
            android:textColor="#808080"
            android:textSize="15sp"
            android:text="--"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/labelAlamat"
            android:layout_below="@+id/labelRekening"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="Alamat :"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/alamatTV"
            android:textColor="#808080"
            android:layout_marginLeft="2dp"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/labelAlamat"
            android:text="---------"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/verifikasi"
            android:layout_below="@+id/alamatTV">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/daftarLaporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/transaksi"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Daftar Laporan Masalah" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/laporkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/laporkan_masalah"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Laporkan Masalah" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/konfigurasiPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/konfigurasi_payment"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Konfigurasi Transaksi" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/akun"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Edit Profil" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ubahPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ubah_password"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Ubah Password" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hapusAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_delete_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Hapus Akun" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoutCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                tools:ignore="TouchTargetSizeCheck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/btn_logout"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Log Out"
                    tools:ignore="UseCompatTextViewDrawableXml" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>