<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelIDTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Transaksi : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_pembayaran_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@+id/labelIDTransaksi"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labeltanggalPembayaran"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelIDTransaksi"
            android:text="Tanggal Pembayaran : "/>

        <TextView
            android:id="@+id/tglPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/labelIDTransaksi"
            android:layout_toEndOf="@+id/labeltanggalPembayaran"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/totalBayarPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/labeltanggalPembayaran"
            android:text="Total Harga : Rp."/>

        <TextView
            android:id="@+id/hargaPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tglPembayaran"
            android:layout_toEndOf="@+id/totalBayarPesanan"
            android:text=""/>

        <TextView
            android:id="@+id/labelNamaPembeli"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/totalBayarPesanan"
            android:text="Akun : "/>

        <TextView
            android:id="@+id/akunDetail"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/hargaPembayaran"
            android:layout_toEndOf="@+id/labelNamaPembeli"
            android:text=""/>
    </RelativeLayout>





</androidx.cardview.widget.CardView>