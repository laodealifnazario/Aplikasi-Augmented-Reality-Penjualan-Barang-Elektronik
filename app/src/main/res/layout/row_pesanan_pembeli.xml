<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelIDpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Pesanan : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@+id/labelIDpesanan"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labeltanggalPesanan"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelIDpesanan"
            android:text="Tanggal Pesanan : "/>

        <TextView
            android:id="@+id/tglPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/labelIDpesanan"
            android:layout_toEndOf="@+id/labeltanggalPesanan"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labelNamaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/labeltanggalPesanan"
            android:text="Nama Barang : "/>

        <TextView
            android:id="@+id/nama_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/tglPesanan"
            android:layout_toEndOf="@+id/labelNamaBarang"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/totalBayarPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@id/labelNamaBarang"
            android:text="Total Harga : Rp."/>

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/nama_barang"
            android:layout_toEndOf="@+id/totalBayarPesanan"
            android:text=""/>

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/totalBayarPesanan"
            android:text="status "/>

<!-- Tombol khusus Mode Pembeli -->
        <Button
            android:id="@+id/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Bayar"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/konfirmasiPembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Konfirmasi"
            tools:ignore="DuplicateClickableBoundsCheck" />

<!-- Tombol khusus Mode Penjual -->
        <Button
            android:id="@+id/kirimBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>
        <Button
            android:id="@+id/konfrimasiPenjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

<!-- Tombol khusus Mode Admin -->
        <Button
            android:id="@+id/verifikasi_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Verifikasi"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/verifikasiPengirimanBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Verifikasi"/>

        <Button
            android:id="@+id/verifikasi_pengembalian_uang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifikasi"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/batalkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/lihatBuktiPengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>





</androidx.cardview.widget.CardView>