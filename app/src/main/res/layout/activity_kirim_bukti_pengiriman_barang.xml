<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KirimBuktiPengirimanBarang">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <!-- ImageButton : Tombol Keluar -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"/>

        <!-- TextView : Toolbar Tiitle -->
        <TextView
            android:id="@+id/toolbarTitleTv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Bukti Pengiriman Barang" />

        <!-- View : To make toolbar look separate from other ui -->
        <View
            android:layout_below="@+id/toolbarRl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            tools:ignore="NotSibling" />

    </RelativeLayout>

    <!-- Tampilan bisa di skrol atas bawah -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarRl"
        android:layout_above="@id/postingAdBtn"
        android:padding="10dp"
        tools:ignore="MissingClass,NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelAlamat"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Alamat Tujuan Pengiriman:" />
            <TextView
                android:id="@+id/alamatPengiriman"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelAlamat"
                android:text="xxxxxxxxxx" />

            <!-- Teks input : Nama pengirim -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/labelNamaPengirim"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nama Pengirim"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                android:layout_below="@+id/alamatPengiriman"
                app:boxCornerRadiusTopStart="8dp"
                tools:ignore="TouchTargetSizeCheck">
                <EditText
                    android:id="@+id/inputNamaPengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapSentences"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Edit Teks : Nomor Resi -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/labelNoResi"
                android:layout_below="@id/labelNamaPengirim"
                android:hint="Nomor Resi"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                android:layout_width="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:id="@+id/inputNoResi"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Teks Input Layout : pilih jenis jasa ekspedisi dari opsi tarik-turun -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/labelJenisEkspedisi"
                android:layout_below="@id/labelNoResi"
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Jasa Ekspedisi"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/inputJasaEkspedisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Teks input : alamat pengirim -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/labelAlamatPenjual"
                android:layout_below="@id/labelJenisEkspedisi"
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Alamat Anda"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/alamatPenjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Teks View : hanya untuk menampilkan label -->
            <TextView
                android:paddingTop="15dp"
                android:id="@+id/imagesLabelTv"
                android:layout_below="@id/labelAlamatPenjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto Bukti Pengiriman:"
                style="@style/TextAppearance.MaterialComponents.Body1"/>

            <!-- ImageButton : Menambahkan Gambar -->
            <ImageButton
                android:id="@+id/btnGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imagesLabelTv"
                android:layout_below="@+id/labelAlamatPenjual"
                android:padding="10dp"
                android:src="@drawable/tambah_gambar"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <!-- RecylerView : Menampilkan gambar picked/ taken dari galeri/ Kamera -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imagesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagesLabelTv"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/row_gambar_picked"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:minHeight="50dp"
        android:textSize="25dp"
        android:text="Kirim Bukti Pengiriman"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>