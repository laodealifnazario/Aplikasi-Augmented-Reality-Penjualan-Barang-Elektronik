<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diskusi.DetailDiskusiActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/toolbarBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/btn_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/toolbarProvileIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#C5C5C5"
            tools:src="@tools:sample/avatars"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toolbarTitleTv"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTitleTv"
            tools:text="@tools:sample/full_names"
            android:layout_centerInParent="true"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatRv"
        android:layout_below="@id/toolbarRl"
        android:layout_above="@+id/view1"
        tools:listitem="@layout/row_chat_right"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_above="@+id/chatInputRl"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatInputRl"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/messageEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/sendFab"
            android:background="@drawable/shape_edittext"
            android:hint="Mulai Mengetik . . ."
            android:inputType="textMultiLine|textCapSentences"
            android:padding="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
        <!--            android:id="@+id/attachFab"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginEnd="4dp"-->
        <!--            android:layout_toStartOf="@+id/sendFab"-->
        <!--            android:elevation="0dp"-->
        <!--            android:src="@drawable/tambah_gambar"-->
        <!--            android:tint="@color/white"-->
        <!--            app:fabSize="mini"-->
        <!--            tools:ignore="SpeakableTextPresentCheck" />-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:elevation="0dp"
            android:src="@drawable/kirim"
            android:tint="@color/white"
            app:fabSize="mini"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

</RelativeLayout>