<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="Beli Barang"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:textAlignment="center"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/hargaLayout">

        <!--   Label     -->
        <TextView
            android:id="@+id/labelHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Harga Barang :"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/hargaRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/hargaBarang"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/hargaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelPengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Biaya PPN :"
            android:layout_below="@+id/labelHarga"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/pengirimanRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/hargaRL"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpPengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/biayaPPN"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/biayaPPN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelBiayaLayananSistem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Biaya Layanan Sistem :"
            android:layout_below="@+id/labelPengiriman"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/biayaSistemRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/pengirimanRL"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpSistem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/biayaLayananSistem"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/biayaLayananSistem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>


        <View
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/labelBiayaLayananSistem"
            android:textAlignment="center"
            android:background="@color/black"/>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelTotalBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total Bayar :"
            android:layout_below="@+id/garis"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/totalBayarRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/garis"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpTotalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/totalBayar"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/totalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>

