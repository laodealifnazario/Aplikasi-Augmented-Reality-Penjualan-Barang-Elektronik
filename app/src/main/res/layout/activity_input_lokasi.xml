<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Input Alamat -->
    <RelativeLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp">

        <!-- Ikon Lokasi -->
        <ImageView
            android:id="@+id/iconAddress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="#4CAF50"
            android:contentDescription="Location Icon"
            tools:ignore="UseAppTint" />

        <!-- Input Teks -->
        <EditText
            android:id="@+id/addressInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/searchButton"
            android:layout_toEndOf="@id/iconAddress"
            android:background="@android:color/transparent"
            android:hint="Enter Address"
            android:padding="12dp"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Tombol Cari -->
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#4CAF50"
            android:padding="8dp"
            android:text="Search"
            android:textColor="@android:color/white"
            tools:ignore="TextContrastCheck" />
    </RelativeLayout>

    <!-- Peta -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/satelliteButton"
        android:layout_below="@id/inputContainer" />

    <!-- Tombol Satelit -->
    <Button
        android:id="@+id/satelliteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="#4CAF50"
        android:padding="8dp"
        android:text="Tampilkan Satelit"
        android:textColor="@android:color/white"
        tools:ignore="TextContrastCheck" />

    <!-- Tombol Lokasi GPS -->
    <Button
        android:id="@+id/gpsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="#4CAF50"
        android:padding="8dp"
        android:text="Lokasiku"
        android:textColor="@android:color/white"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>
