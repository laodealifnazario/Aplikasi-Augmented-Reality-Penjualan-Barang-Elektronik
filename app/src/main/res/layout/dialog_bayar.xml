<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="Transaksi Pembayaran"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:textAlignment="center"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/hargaLayout">

        <!-- Teks input : input brand posting yang dibuat -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/labelAlamat"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Alamat Anda"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            tools:ignore="TouchTargetSizeCheck">
            <EditText
                android:id="@+id/inputAlamatPengiriman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapSentences"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/labelmetodePembayaran"
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            android:layout_below="@+id/labelAlamat"
            app:boxCornerRadiusTopStart="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Jenis Metode Pembayaran"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/inputJenisBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelmetodePembayaran"
            android:padding="5dp"
            android:text="Harga Barang :"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/hargaRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/labelmetodePembayaran"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/hargaBarang"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/hargaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelPengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Biaya Pengiriman :"
            android:layout_below="@+id/labelHarga"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/pengirimanRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/hargaRL"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpPengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/biayaPengiriman"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/biayaPengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7000"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelBiayaLayananSistem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Biaya Layanan Sistem :"
            android:layout_below="@+id/labelPengiriman"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/biayaSistemRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/pengirimanRL"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpSistem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/biayaLayananSistem"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/biayaLayananSistem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/labelBiayaLayananSistem"
            android:textAlignment="center"
            android:background="@color/black"/>

        <!--   Label     -->
        <TextView
            android:id="@+id/labelTotalBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total Bayar :"
            android:layout_below="@+id/garis"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/totalBayarRL"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/garis"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rpTotalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textStyle="bold"
                android:layout_toStartOf="@+id/totalBayar"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/totalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>

